<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="/css/store/nav.css">
    <link rel="stylesheet" href="/css/store/cart.css">
    <title>Cart</title>
</head>
<body>
    <%- include('./navbar'); %>
    <div class="container">
        <div class="row mt-2 pt-5 d-flex justify-content-center">
                <% if(items.length!==0){ %>
                    <% if(message.length > 0){ %>
                        <div class="alert alert-success">
                            <%= message %> 
                        </div>
                    <% } %> 
                    <div class="col-md-7">
                        <% for(let item of items){ %>
                            <div class="card border border-0 rounded-0 w-100 mb-2">
                                <div class="row shadow-sm g-0">
                                    <div class="col-md-3 d-flex justify-content-center">
                                        <img src="<%= item.img %>" class="mt-2 mb-2 img-fluid" width="70%" alt="...">
                                    </div>
                                    <div class="col-md-9">
                                        <div class="card-body d-flex justify-content-between align-items-center" style="height: 100%;">
                                            <div class="col-md-4 align-self-baseline">
                                                <h5 class="card-title align-baseline"> <%= item.title %> </h5>
                                            </div>
                                            <input class="number-input" type="number" value="<%= item.quantity %>">  
                                            <h5 class="card-text"> ₱<%= item.price.toLocaleString() %></h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %> 
                    </div>
                    <div class="col-md-5">
                        <div class="card rounded-0 w-100">
                            <h3 class="card-title me-5 ms-5 mt-5 mb-5" >Checkout Summary</h3>
                            <ul class="list-group rounded-0">
                                <% let total=0 %> 
                                <% for(let item of items){ %> 
                                    <% total=total+(item.price*item.quantity) %> 
                                    <li class="list-group-item d-flex justify-content-between">
                                        <%= item.title %> 
                                        <div></div>
                                        ₱<%= item.price.toLocaleString() %> x <%= item.quantity %> = ₱<%= (item.price*item.quantity).toLocaleString() %> 
                                    </li>
                                <% } %>
                                <li class="list-group-item d-flex justify-content-between">
                                    <h5>Delivery Fee</h5>
                                    <div></div>
                                    ₱<%= 100 %> 
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <h4>Total</h4>
                                    <div></div>
                                    ₱<%= (total+100).toLocaleString() %> 
                                </li>
                            </ul>
                        </div>
                        <div class="mt-2 d-flex justify-content-end">
                            <form action="/checkout/<%- sessionId %>" method="POST">
                                <button class="btn btn-dark" type="submit">Checkout</button>
                            </form>
                        </div>
                    </div>
                    
                <% }else{ %>
                    <h1>Cart is Empty</h1>
                <% } %>  
        </div>
    </div>   
</body>
</html>